
<!DOCTYPE html>
<html>
<head>
    <!-- INCLUDE PAGE HEADER -->
    <%- include('includes/header.ejs') %>
</head>
<body>
        <!-- START PAGE CONTAINER -->
    <div class="page-container">
        
        <!-- INCLUDE PAGE SIDEBAR -->
        <%- include('includes/sidebar.ejs') %>
        
        <!-- PAGE CONTENT -->
        <div class="page-content">

            <!-- INCLUDE PAGE TOP -->
            <%- include('includes/top.ejs') %>

            
            <script>
            $( document ).ready(function() {
                $("#users").addClass('active');
            });   
            function open_msg(link)
            {
                $("#delete_log").prop('href',link);
                $("#mb-delete").modal('show');
            }
            </script>
            
            <!-- START BREADCRUMB -->
            <ul class="breadcrumb">
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Users</a></li>    
            </ul>
            <!-- END BREADCRUMB -->
            
            <!-- PAGE CONTENT WRAPPER -->
            <div class="page-content-wrap">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><strong>Users</strong> List</h3>
                            </div>
                            <h4 style="color: red;text-align: center;"></h4>
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table datatable">
                                        <thead>
                                            <tr>
                                                <th>S. No.</th>
                                                <th>Name</th>
                                                <th>DOB</th>
                                                <th>Email</th>
                                                <th>Zipcode</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let i = 0; i < users.length; i++) { %>
                                            <tr>
                                                <td><%= i + 1 %></td>
                                                <td><%= users[i].name %></td>
                                                <td><%= formatDate(users[i].dob) %></td>
                                                <td><%= users[i].email %></td>
                                                <td><%= users[i].zipcode %></td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div> <!-- END panel-body -->
                        </div> <!-- END panel panel-default -->
                    </div> <!-- END col-md-6 -->
            
                </div> <!-- END row -->
            </div> <!-- END page-content-wrap -->
            <!-- END PAGE CONTENT WRAPPER -->      

        </div>
        <!-- END PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTAINER -->

    <% function formatDate(dob) {
        // Create a Date object from the DOB string
        const dobDate = new Date(dob);
        
        // Get day, month, and year components
        const day = dobDate.getDate();
        const month = dobDate.getMonth() + 1; // Months are 0-based, so add 1
        const year = dobDate.getFullYear();
        
        // Pad day and month with leading zeros if needed
        const formattedDay = day < 10 ? `0${day}` : day;
        const formattedMonth = month < 10 ? `0${month}` : month;
        
        // Return the formatted date as "dd mm yyyy"
        return `${formattedDay}/${formattedMonth}/${year}`;
      } %>

    <!-- INCLUDE PAGE FOOTER -->
    <%- include('includes/footer.ejs') %>

</body>
</html>
